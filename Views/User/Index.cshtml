
@model Library.Models.User.UserIndexModel
@{
    ViewBag.Title = "User Index";
}
<h3>User Index</h3>
<div id="user">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="userIndexTable">
        <thead>
            <tr>
                <th>Profile Link</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Library Card Id</th>
                <th>Overdue Fees</th>
                <th>Home Library</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in @Model.users)
            {
                <tr>
                    <td id="patronIcon"><a asp-controller="User" asp-action="Detail" asp-route-id="@user.UserID"><i class="fa fa-user fa-2x"></i></a></td>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LibraryCardId</td>
                    <td>@user.Feed</td>
                    <td>@user.HomeBrach </td>
                </tr>
            }
        </tbody>
    </table>
</div>

